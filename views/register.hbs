<div class="row">
  <div class="col-md-12">
    <h2>Register</h2>
    <hr />
    {{#if errorMessage}}
      <div class="alert alert-danger">
        <strong>Error:</strong>
        {{errorMessage}}</div>
    {{/if}}

    {{#if successMessage}}
      <div class="alert alert-success">
        <strong>Success:</strong>
        {{successMessage}}</div><a
        class="btn btn-success pull-right"
        href="/login"
      >&nbsp;&nbsp;&nbsp;Proceed to Log in&nbsp;&nbsp;&nbsp;</a><br /><br /><br />
    {{/if}}
    {{#unless successMessage}}

      <form method="post" action="/register">
        <fieldset>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">

                <input
                  class="form-control"
                  id="userName"
                  name="userName"
                  type="text"
                  placeholder="User Name"
                  required
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">

                <input
                  class="form-control"
                  id="password"
                  name="password"
                  type="password"
                  placeholder="Password"
                  required
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">

                <input
                  class="form-control"
                  id="password2"
                  name="password2"
                  type="password"
                  placeholder="Confirm Password"
                  required
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">

                <input
                  class="form-control"
                  id="email"
                  name="email"
                  type="email"
                  placeholder="Email Address"
                  required
                />
              </div>
            </div>
          </div>
        </fieldset>

        <input
          type="submit"
          class="btn btn-Success pull-right"
          value="Register"
        />
        <br /><br /><br />
      </form>
    {{/unless}}
  </div>
</div>